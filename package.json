{
  "type": "module",
  "private": "true",
  "version": "0.0.0",
  "main": "public/index.js",
  "scripts": {
    "lint": "eslint \"./**/*.{ts,js}\"",
    "build-tests": "esbuild test/index.ts --bundle --format=cjs --keep-names > test/test-bundle.js",
    "test": "npm run lint && npm run build && npm run build-tests && npm run test-tape-run",
    "test-tape-run": "cat test/index.html | tape-run --input=html --static=test | tap-spec",
    "build": "mkdir -p ./public && rm -rf ./public/* && npm run build:js",
    "build:js": "esbuild --minify --bundle ./src/index.ts --outfile=./public/index.js",
    "build:html": "esbuild --format=esm --platform=node ./script/html.ts | node --input-type=module",
    "build:css": "postcss src/style.css -o public/style.css",
    "copy": "cp -r ./src/* ./public && cp ./_public/* ./public",
    "start": "npm run build && http-server --port 8888 ./public",
    "preversion": "npm run lint",
    "version": "auto-changelog --template keepachangelog --breaking-pattern 'BREAKING CHANGE' && git add CHANGELOG.md",
    "postversion": "git push --follow-tags",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@bicycle-codes/debug": "^0.7.2",
    "@bicycle-codes/tapzero": "^0.10.0",
    "@substrate-system/debug": "^0.7.22",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "auto-changelog": "^2.4.0",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "globby": "^14.1.0",
    "http-server": "^14.1.1",
    "hyperstream": "^1.2.2",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-nesting": "^13.0.0",
    "postcss-preset-env": "^10.1.5",
    "tap-spec": "^5.0.0",
    "tape-run": "^11.0.0",
    "typescript": "^5.3.3"
  },
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)"
}
